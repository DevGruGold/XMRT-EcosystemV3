# XMRT Ecosystem V3 - Frontend Environment Variables

# Application URLs
NEXT_PUBLIC_APP_URL=https://xmrt.io
NEXT_PUBLIC_API_URL=https://api.xmrt.io
NEXT_PUBLIC_WS_URL=wss://ws.xmrt.io

# Blockchain Configuration
NEXT_PUBLIC_CHAIN_ID=1
NEXT_PUBLIC_NETWORK_NAME=mainnet
NEXT_PUBLIC_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY

# Web3 Configuration
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key

# AI & Analytics
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_GOVERNANCE=true
NEXT_PUBLIC_ENABLE_CROSS_CHAIN=true
NEXT_PUBLIC_ENABLE_STAKING=true

# Social & Marketing
NEXT_PUBLIC_TWITTER_HANDLE=@XMRT_io
NEXT_PUBLIC_DISCORD_INVITE=https://discord.gg/xmrt
NEXT_PUBLIC_TELEGRAM_CHANNEL=https://t.me/xmrt_official

# Development
NODE_ENV=production
NEXT_PUBLIC_DEBUG=false
