# XMRT Ecosystem V3 Environment Configuration

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=development
PORT=8000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://xmrt_user:xmrt_password@localhost:5432/xmrt_db
POSTGRES_DB=xmrt_db
POSTGRES_USER=xmrt_user
POSTGRES_PASSWORD=xmrt_password

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret
ENCRYPTION_KEY=your-32-character-encryption-key

# ===========================================
# BLOCKCHAIN CONFIGURATION
# ===========================================
BLOCKCHAIN_RPC_URL=http://localhost:8545
CHAIN_ID=31337
PRIVATE_KEY=your-private-key-for-deployment
INFURA_PROJECT_ID=your-infura-project-id
ALCHEMY_API_KEY=your-alchemy-api-key

# ===========================================
# MONERO CONFIGURATION
# ===========================================
MONERO_RPC_URL=http://localhost:18081
MONERO_WALLET_RPC_URL=http://localhost:18082
MONERO_DAEMON_HOST=localhost
MONERO_DAEMON_PORT=18081
MONERO_TESTNET=true

# ===========================================
# AI CONFIGURATION
# ===========================================
AI_API_KEY=your-openai-api-key
AI_MODEL=gpt-4
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7
ANTHROPIC_API_KEY=your-anthropic-api-key

# ===========================================
# EXTERNAL SERVICES
# ===========================================
SENDGRID_API_KEY=your-sendgrid-api-key
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=xmrt-storage

# ===========================================
# MONITORING & LOGGING
# ===========================================
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key

# ===========================================
# SOCIAL & COMMUNICATION
# ===========================================
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_GUILD_ID=your-discord-guild-id
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
DEBUG=true
VERBOSE_LOGGING=true
ENABLE_CORS=true
RATE_LIMIT_ENABLED=false

# ===========================================
# PRODUCTION SETTINGS (Override in production)
# ===========================================
# NODE_ENV=production
# DEBUG=false
# VERBOSE_LOGGING=false
# ENABLE_CORS=false
# RATE_LIMIT_ENABLED=true
